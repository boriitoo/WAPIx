<div class="space-y-8">
  <div>
    <h2 class="text-3xl font-bold text-white mb-2">Active Sessions</h2>
    <p class="text-slate-400">Manage your WhatsApp sessions and connections</p>
  </div>

  {{#if sessions.length}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {{#each sessions}}
        <div
          class="bg-slate-800 border border-slate-700 rounded-lg p-6 hover:border-slate-600 transition"
        >
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-lg font-semibold text-white">{{name}}</h3>
              <p class="text-sm text-slate-400">ID: {{id}}</p>
            </div>
            <div class="flex items-center gap-2">
              {{#if isConnected}}
                <span
                  class="inline-flex items-center gap-1 px-3 py-1 bg-green-900 text-green-200 rounded-full text-xs font-medium"
                >
                  <span class="w-2 h-2 bg-green-400 rounded-full"></span>
                  Connected
                </span>
              {{else}}
                <span
                  class="inline-flex items-center gap-1 px-3 py-1 bg-slate-700 text-slate-300 rounded-full text-xs font-medium"
                >
                  <span class="w-2 h-2 bg-slate-500 rounded-full"></span>
                  Disconnected
                </span>
              {{/if}}
            </div>
          </div>

          <!--                    {{#if qr}}-->
                    <!--                        <div class="mb-4 p-4 bg-slate-700 rounded-lg flex items-center justify-center">-->
                    <!--                            <img src="{{qr}}" alt="QR Code for {{name}}" class="w-32 h-32">-->
                    <!--                        </div>-->
                        <!--                    {{/if}}-->

          <div class="space-y-3 mb-4 text-sm">
            <div>
              <p class="text-slate-400">Webhook URL</p>
              <p
                class="text-slate-300 break-all font-mono text-xs"
              >{{webhook}}</p>
            </div>
          </div>

          <div class="flex gap-2">
            <a
              href="/sessions/{{id}}/edit"
              class="flex-1 px-3 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded transition text-center text-sm"
            >
              Edit
            </a>
            <button
              onclick="deleteSession('{{name}}')"
              class="flex-1 px-3 py-2 bg-red-900 hover:bg-red-800 text-red-200 rounded transition text-sm"
            >
              Delete
            </button>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div
      class="bg-slate-800 border border-slate-700 rounded-lg p-12 text-center"
    >
      <p class="text-slate-400 mb-4">No active sessions yet</p>
      <a
        href="/sessions/new"
        class="inline-block px-6 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition"
      >
        Create Your First Session
      </a>
    </div>
  {{/if}}
</div>

<script
  type="application/javascript"
  src="./public/scripts/delete_session.js"
></script>